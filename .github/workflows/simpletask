name: Build Test

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: self-hosted

    steps:
      - name: Checkout Code
        uses: actions/checkout@v3

      - name: Run Build Command
        run: |
          echo "✅ Build stage started"
          echo "🛠️ Running a simple task..."
          date
